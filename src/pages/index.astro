---
import "../styles/global.css";
import FontPreview from "../components/FontPreview.astro";
import { readdir } from "fs/promises";
import { join } from "path";

const fontFiles: string[] = await readdir(join(process.cwd(), "public/fonts"));
const fontFaces = fontFiles
  .map((fontFile) => {
    const fontName = fontFile.replace(/\.[^/.]+$/, "");
    return `
        @font-face {
          font-family: '${fontName}';
          src: url('/fonts/${fontFile}');
        }
      `;
  })
  .join("");

const fontPreloads = fontFiles.map((fontFile) => ({
  href: `/fonts/${fontFile}`,
  type: fontFile.endsWith(".woff2")
    ? "font/woff2"
    : fontFile.endsWith(".woff")
      ? "font/woff"
      : fontFile.endsWith(".ttf")
        ? "font/ttf"
        : fontFile.endsWith(".otf")
          ? "font/otf"
          : "font/truetype",
}));

const siteUrl =
  import.meta.env.SITE ||
  Astro.site?.toString() ||
  "https://uyfonts.vercel.app";
const ogImage = `${siteUrl}/ogp-image.png`;
---

<html lang="ug">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="UyFonts - A collection of Uyghur fonts designed to support the Uyghur language and its unique script. Various font styles and formats for different design needs."
    />
    <meta property="og:title" content="UyFonts" />
    <meta
      property="og:description"
      content="UyFonts - A collection of Uyghur fonts designed to support the Uyghur language and its unique script. Various font styles and formats for different design needs."
    />
    <meta property="og:image" content={ogImage} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="UyFonts" />
    <meta
      name="twitter:description"
      content="UyFonts - A collection of Uyghur fonts designed to support the Uyghur language and its unique script. Various font styles and formats for different design needs."
    />
    <meta name="twitter:image" content={ogImage} />
    <title>UyFonts</title>
    {
      fontPreloads.map(({ href, type }) => (
        <link rel="preload" href={href} as="font" type={type} crossorigin />
      ))
    }
    <style
      type="text/css"
      set:html={`
      body,
      html {
        box-sizing: border-box;
      }
      ${fontFaces}
    `}
    ></style>
  </head>
  <body class="min-h-screen flex flex-col gap-6">
    <main class="container mx-auto p-6 grow">
      <div class="flex-col flex gap-4">
        <h1 class="text-3xl font-semibold">Uyghur Fonts</h1>
        <p class="font-light">
          Uyfonts is a collection of Uyghur fonts designed to support the Uyghur
          language and its unique script. This repository contains various font
          styles and formats to cater to different design needs.
        </p>

        <FontPreview client:load />
      </div>
    </main>
    <footer
      class="p-6 border-t border-gray-300 text-center flex justify-center"
    >
      <a
        href="https://github.com/qaynam/uyfonts"
        target="_blank"
        class="flex items-center gap-1 underline"
      >
        <svg
          class="inline-block w-4 h-4"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="currentColor"
          xmlns="http://www.w3.org/2000/svg"
